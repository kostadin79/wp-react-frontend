# Frontend-Only Environment Configuration
# Copy this file to .env.local for frontend-only deployment

# WordPress Configuration (External WordPress instance)
NEXT_PUBLIC_WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_API_URL=https://your-wordpress-site.com/wp-json/wp/v2
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# JWT Authentication (must match WordPress JWT secret)
JWT_SECRET_KEY=your-wordpress-jwt-secret-key

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379

# Application Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Optional: API Keys and Services
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://your-sentry-dsn
# VERCEL_URL=your-frontend-domain.com